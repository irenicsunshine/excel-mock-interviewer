# Core Settings
DEBUG=false
MOCK_MODE=true

# Database (PostgreSQL for production, SQLite for local)
DATABASE_URL=postgresql://interview_user:interview_pass@localhost:5432/interview_db
# DATABASE_URL=sqlite:///interview_data.db  # Uncomment for local SQLite

# Redis for job queue
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (get free tier from providers)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# Evaluation Weights
DETERMINISTIC_WEIGHT=0.6
LLM_WEIGHT=0.4
PASS_THRESHOLD=2.5
FLAG_CONFIDENCE_THRESHOLD=0.45

# Interview Settings
MAX_QUESTIONS=6
DEFAULT_TIME_LIMIT=300

# Optional: Monitoring
SENTRY_DSN=
